        <div class="row landing-header justify-content-center">
            <div class="col-12">
                <h4 class='text-primary'><%= t :landing_header %> </h4>
            </div>
        </div>
    </div>
    <div class="fade-darker landing-tombstone-container">
        <%= render partial: 'epitaphs/tombstone_name_text', locals: {name: 'Will Roger', text: "I never met a man I didnâ€™t like"} %>

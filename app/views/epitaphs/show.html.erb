<div class="lighter fade-darker-short">

    <div class="container">
        <div class="row landing-header justify-content-center">
            <div class="col-12">
                <h4 class='text-primary'><%= t :landing_header %> </h4>
            </div>
        </div>
    </div>

    <%= render partial: 'tombstone_name_text', locals: {name: @epitaph.name, text: @epitaph.text} %>
</div>

<div class="container">
    <div class="row justify-content-center show-epitaph-buttons">
        <% if @epitaph.user == current_user %>
            <div class="col-md-auto col-sm-6">
                <%= link_to t('edit_epitaph'), edit_epitaph_url(current_user), class: 'btn', role: "button" %>
            </div>
            <div class="col-md-auto col-sm-6">
                <%= link_to t('share_yours'), share_epitaph_url(current_user), class: 'btn', role: "button" %>
            </div>
        <% else %>
            <div class="col-12">
                <%= link_to t(:write_yours_from_share), root_path, class: 'btn', role: "button" %>
            </div>
        <% end %>
    </div>
</div>
